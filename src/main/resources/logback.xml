<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/home/log/backend.log</file>
        <encoder>
            <pattern>%d %-5p [%c] - %m%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>